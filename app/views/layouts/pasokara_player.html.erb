<%# encoding: utf-8 %>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
       "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
<head>
  <meta http-equiv="content-type" content="text/html;charset=UTF-8" />
  <meta name="viewport" content="width=480, initial-scale=0.667">

  <title>Pasokara Player</title>
  <%= stylesheet_link_tag 'scaffold' %>
  <%= stylesheet_link_tag 'jquery.fancybox' %>
  <%= javascript_include_tag :defaults %>
  <%= javascript_include_tag "jquery-1.3.2.min.js" %>
  <%= javascript_include_tag "jquery.fancybox-1.2.1.pack.js" %>
  <script type="text/javascript">
    jQuery.noConflict();
    j$ = jQuery;

    j$(document).ready(function() {
        j$("a.fancygroup").fancybox({
          'zoomSpeedIn': 300,
          'zoomSpeedOut': 300,
          'frameWidth': 250,
          'hideOnContentClick': false,
          'centerOnScroll': false,
        });

    }); 
  </script>
</head>
<body>
  <div id="user_info"><%= content_tag(:span, "現在のログインユーザー: " + @user.name, :class => "login_user") if session[:current_user] %><a class="fancygroup" href="/user/switch">ユーザー切り替え</a></div>

  <br />
<% if flash[:notice] -%>
  <div class="notification"><%= flash[:notice] %></div>
<% end -%>

<%= yield %>

</body>
</html>
