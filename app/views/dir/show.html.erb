<%= image_tag("icon/arrow_up_48.png", :size => "24x24") %><%= link_to("上のディレクトリへ", :action => 'show', :id => @dir.directory) %><br />
<h1><%= image_tag("icon/elastic_movie.png", :class => "parent_dir", :size => "32x32") %><%= h @dir.name %></h1>
<% cache(:action => "show", :page => params[:page]) do -%>
  <ul id="entity_list" class="autopagerize_page_element">
    <% @entities.each do |entity| %>
      <% cache("pasokara_li_#{entity.id}") do %>
        <%= entity_li(entity) %>
      <% end %>
    <% end %>
  </ul>
  <%= will_paginate(@entities) %>
<% end -%>
